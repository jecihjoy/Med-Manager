<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jecihjoy.medmanager.AddNewMedication">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edt_medication_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Medication Name"
                android:layout_margin="8dp"/>
            <EditText
                android:id="@+id/edt_medication_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Medication Description"
                android:layout_margin="8dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <TextView
                    android:id="@+id/edt_medication_frequency"
                    android:layout_width="200dp"
                    android:text="Frequency"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/spinner_frequency"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <EditText
                android:id="@+id/edt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Click to select starttime"
                android:layout_margin="8dp"/>

            <DatePicker
                android:id="@+id/datepicker_startdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"/>
            <DatePicker
                android:id="@+id/datepicker_enddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:textAllCaps="true"/>


        </LinearLayout>
    </ScrollView>

</FrameLayout>
